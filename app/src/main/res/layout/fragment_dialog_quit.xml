<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/background_color"
>

  <TextView
          android:id="@+id/tv_quit"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/question_quit"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:textSize="20sp"
          android:textColor="@color/white"
          android:gravity="center"
          android:layout_marginTop="44dp"
  />

  <androidx.cardview.widget.CardView
          android:id="@+id/ll_checks"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/tv_quit"
          app:cardCornerRadius="3dp"
          android:layout_marginHorizontal="12dp"
          android:layout_marginVertical="24dp"
          app:cardBackgroundColor="@color/input_background_color"
  >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
    >
      <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="탈퇴 시, 작성하신 기대평과 리뷰, 북마크가 모두 삭제되어 복구가 불가능합니다."
              android:textColor="@color/input_text_color"
              android:textSize="12sp"
      />
      <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="또한, 회원 정보가 모두 삭제되기 때문에 언제든지 다시 가입이 가능합니다"
              android:textColor="@color/input_text_color"
              android:layout_marginTop="12dp"
              android:textSize="12sp"
      />
    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <LinearLayout
          android:id="@+id/ll_agree"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="12dp"
          app:layout_constraintTop_toBottomOf="@id/ll_checks"
          android:gravity="center"
          android:orientation="horizontal"
  >
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동의합니다"
            android:textColor="@color/input_text_color"
            android:textSize="16sp"
    />
    <CheckBox
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
    />
  </LinearLayout>

  <androidx.cardview.widget.CardView
          android:id="@+id/cv_cancel"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardBackgroundColor="@color/component_background_color"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@id/ll_agree"
          app:cardCornerRadius="10dp"
          android:layout_marginHorizontal="44dp"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="44dp"
  >
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:background="@color/component_background_color"
            android:textColor="@color/component_color"
    />
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
          android:id="@+id/cv_ok"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:cardBackgroundColor="@color/component_color"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintTop_toBottomOf="@id/ll_agree"
          app:cardCornerRadius="10dp"
          android:layout_marginHorizontal="44dp"
          android:layout_marginTop="20dp"
          android:layout_marginBottom="44dp"
  >
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:background="@color/component_color"
            android:textColor="@color/black"
    />
  </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>