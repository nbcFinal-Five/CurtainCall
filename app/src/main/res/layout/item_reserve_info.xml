<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color_opacity_50"
    android:padding="16dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/component_background_color"
        app:layout_constraintBottom_toTopOf="@id/tv_reserveUrl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_reserveName" />

    <TextView
        android:id="@+id/tv_reserveName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="LG아트센터" />

    <TextView
        android:id="@+id/tv_reserveUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autoLink="web"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_reserveName"
        tools:text="https://www.lgart.com/product/ko/performance/252863" />


</androidx.constraintlayout.widget.ConstraintLayout>