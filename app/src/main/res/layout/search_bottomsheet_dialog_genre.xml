<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_bottom_sheet_background"
    android:clipToOutline="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_bottomdialog_genre_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/filter_genre"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.Chip
        android:id="@+id/cp_bottom_genre_theater"
        style="@style/CustomChipChoice."
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:text="@string/filter_genre_theater"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/cp_bottom_futility"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottomdialog_genre_title" />

    <com.google.android.material.chip.Chip
        android:id="@+id/cp_bottom_futility"
        style="@style/CustomChipChoice."
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:text="@string/filter_genre_futility"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cp_bottom_genre_theater"
        app:layout_constraintEnd_toStartOf="@+id/cp_bottom_publicfutility"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cp_bottom_genre_theater"
        app:layout_constraintTop_toTopOf="@+id/cp_bottom_genre_theater" />

    <com.google.android.material.chip.Chip
        android:id="@+id/cp_bottom_publicfutility"
        style="@style/CustomChipChoice."
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:text="@string/filter_genre_publicfutility"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cp_bottom_futility"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cp_bottom_futility"
        app:layout_constraintTop_toTopOf="@+id/cp_bottom_futility" />

    <com.google.android.material.chip.Chip
        android:id="@+id/cp_bottom_classic"
        style="@style/CustomChipChoice."
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="@string/filter_genre_classic"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/cp_bottom_genre_theater"
        app:layout_constraintTop_toBottomOf="@+id/cp_bottom_genre_theater" />

    <com.google.android.material.chip.Chip
        android:id="@+id/cp_bottom_korean_classic"
        style="@style/CustomChipChoice."
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:text="@string/filter_genre_korean_classic"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cp_bottom_classic"
        app:layout_constraintStart_toEndOf="@+id/cp_bottom_classic"
        app:layout_constraintTop_toTopOf="@+id/cp_bottom_classic" />

    <com.google.android.material.chip.Chip
        android:id="@+id/cp_bottom_popular_music"
        style="@style/CustomChipChoice."
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:text="@string/filter_genre_popular_music"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cp_bottom_korean_classic"
        app:layout_constraintStart_toEndOf="@+id/cp_bottom_korean_classic"
        app:layout_constraintTop_toTopOf="@+id/cp_bottom_korean_classic" />

    <com.google.android.material.chip.Chip
        android:id="@+id/cp_bottom_musical"
        style="@style/CustomChipChoice."
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:text="@string/filter_genre_musical"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/cp_bottom_classic"
        app:layout_constraintTop_toBottomOf="@+id/cp_bottom_classic" />

    <com.google.android.material.chip.Chip
        android:id="@+id/cp_bottom_circus"
        style="@style/CustomChipChoice."
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:text="@string/filter_genre_circus"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cp_bottom_musical"
        app:layout_constraintStart_toEndOf="@+id/cp_bottom_musical"
        app:layout_constraintTop_toTopOf="@+id/cp_bottom_musical" />

    <com.google.android.material.chip.Chip
        android:id="@+id/cp_bottom_mix"
        style="@style/CustomChipChoice."
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:text="@string/filter_genre_mix"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/cp_bottom_circus"
        app:layout_constraintStart_toEndOf="@+id/cp_bottom_circus"
        app:layout_constraintTop_toTopOf="@+id/cp_bottom_circus" />

    <Button
        android:id="@+id/btn_genre_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/component_color"
        android:text="@string/filter_choose"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cp_bottom_mix" />

</androidx.constraintlayout.widget.ConstraintLayout>