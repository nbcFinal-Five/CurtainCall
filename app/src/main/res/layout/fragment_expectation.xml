<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".presentation.detail_activity.er.expectation.ExpectationFragment"
            android:background="@color/background_color"
>
  <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="12dp"
  >
    <LinearLayout
            android:id="@+id/ll_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/circle_off"
    >
      <LinearLayout
              android:id="@+id/btn_expect_true"
              android:layout_width="140dp"
              android:layout_height="140dp"
              android:orientation="vertical"
              android:gravity="center"
      >
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/curtain_open"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
        />

        <TextView
                android:id="@+id/tv_true_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/good"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
        />

      </LinearLayout>

      <View
              android:layout_width="0dp"
              android:layout_height="0dp"
              android:layout_weight="1"
      />

      <LinearLayout
              android:id="@+id/btn_expect_false"
              android:layout_width="140dp"
              android:layout_height="140dp"
              android:orientation="vertical"
              android:gravity="center"
              android:background="@drawable/circle_off"
      >
        <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/curtain_close"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bad"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
        />

        <TextView
                android:id="@+id/tv_false_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/bad"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
        />

      </LinearLayout>
    </LinearLayout>

    <TextView
            android:id="@+id/tv_expect_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_buttons"
            android:text="@string/warning_good_bad"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/primary_color"
            android:visibility="invisible"
            android:textSize="12sp"
            android:maxLines="1"
    />

    <TextView
            android:id="@+id/tv_expectation_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_expectation"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_expect_warning"
            app:layout_constraintStart_toStartOf="parent"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_expectation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_expectation_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cv_submit"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/input_background_color"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="12dp"
    >
      <EditText
              android:id="@+id/et_expectation"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="16sp"
              android:hint="@string/write_in_30"
              android:textColor="@color/white"
              android:textColorHint="@color/input_text_color"
              android:background="@color/input_background_color"
              android:padding="8dp"
      />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/tv_comment_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_expectation"
            android:text="@string/warning_expectation"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/primary_color"
            android:visibility="invisible"
            android:textSize="12sp"
            android:maxLines="1"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_submit"
            android:layout_width="80dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cv_expectation"
            app:layout_constraintBottom_toBottomOf="@id/cv_expectation"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp"
    >
      <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/btn_submit"
              android:layout_width="80dp"
              android:layout_height="match_parent"
              android:text="@string/sakusei"
              android:textSize="16sp"
              android:background="@color/half_dark"
              android:gravity="center"
              android:textColor="@color/white"
      />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_expectations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_comment_warning"
            android:layout_marginTop="24dp"
    />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rv_expectations"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/more_expectation_text"
            android:textColor="@color/primary_color"
    />

    <TextView
            android:id="@+id/tv_empty_expectations"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:gravity="center"
            android:text="@string/empty_expectations"
            android:textSize="16sp"
            android:textColor="@color/bottom_navi_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment_warning"
            android:lineHeight="30dp"
            android:layout_marginTop="24dp"
    />
  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>