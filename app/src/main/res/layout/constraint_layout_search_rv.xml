<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="170dp"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/iv_search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_searchlist_radius3"
        android:clipToOutline="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_example_poster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_searchitem_genre"
        style="@style/SearchTopBadge"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_margin="3dp"
        android:background="@drawable/shape_searchlist_radius3"
        android:text="@string/filter_genre"
        app:layout_constraintStart_toStartOf="@+id/iv_search_result"
        app:layout_constraintTop_toTopOf="@+id/iv_search_result" />

    <TextView
        android:id="@+id/tv_searchitem_prfstate"
        style="@style/SearchTopBadge"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="1dp"
        android:background="@drawable/shape_searchlist_radius3"
        android:text="@string/filter_genre"
        app:layout_constraintBottom_toBottomOf="@+id/tv_searchitem_genre"
        app:layout_constraintStart_toEndOf="@id/tv_searchitem_genre"
        app:layout_constraintTop_toTopOf="@+id/tv_searchitem_genre" />

</androidx.constraintlayout.widget.ConstraintLayout>