<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginBottom="15dp">

    <ImageView
        android:id="@+id/iv_search_result"
        style="@style/posterStyle"
        android:clipToOutline="true"
        android:src="@drawable/img_example_poster"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_searchitem_genre"
        style="@style/posterTopLabel"
        android:layout_height="20dp"
        android:layout_marginStart="1dp"
        android:text="@string/filter_genre"
        app:layout_constraintStart_toStartOf="@+id/iv_search_result"
        app:layout_constraintTop_toTopOf="@+id/iv_search_result" />

    <TextView
        android:id="@+id/tv_searchitem_prfstate"
        style="@style/posterTopLabel"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:text="@string/filter_genre"
        app:layout_constraintBottom_toBottomOf="@+id/tv_searchitem_genre"
        app:layout_constraintStart_toEndOf="@id/tv_searchitem_genre"
        app:layout_constraintTop_toTopOf="@+id/tv_searchitem_genre" />

</androidx.constraintlayout.widget.ConstraintLayout>