<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:padding="16dp"
>

  <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
  >
    <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/login"
            android:textColor="@color/white"
            android:layout_marginStart="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/font_regular"
    />

    <TextView
            android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shownect_title"
            app:layout_constraintTop_toBottomOf="@id/tv_login_title"
            app:layout_constraintBottom_toTopOf="@id/cv_email"
            android:textColor="@color/primary_color"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_email"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@id/tv_login_title"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/background_color"
            android:layout_marginTop="144dp"
    >
      <EditText
              android:id="@+id/et_input_email"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:textSize="16sp"
              android:background="@color/input_background_color"
              android:hint="@string/email"
              android:textColor="@color/input_text_color"
              android:textColorHint="@color/input_text_color"
              android:paddingHorizontal="12dp"
              android:fontFamily="@font/font_regular"
      />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/tv_email_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_email"
            android:text="@string/email_warning"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/primary_color"
            android:visibility="invisible"
            android:textSize="12sp"
            android:fontFamily="@font/font_regular"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_password"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintTop_toBottomOf="@id/tv_email_warning"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/background_color"
            android:layout_marginTop="4dp"
    >
      <EditText
              android:id="@+id/et_input_password"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:textSize="16sp"
              android:background="@color/input_background_color"
              android:hint="@string/password"
              android:textColor="@color/input_text_color"
              android:textColorHint="@color/input_text_color"
              android:paddingHorizontal="12dp"
              android:inputType="textPassword"
              android:fontFamily="@font/font_regular"
      />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/tv_password_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_password"
            android:text="@string/password_warning"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/primary_color"
            android:visibility="invisible"
            android:textSize="12sp"
            android:fontFamily="@font/font_regular"
    />

    <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_password_warning"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/register"
            android:textSize="16sp"
            android:padding="0dp"
            android:textColor="@color/white"
            android:fontFamily="@font/font_regular"
    />

    <TextView
            android:id="@+id/tv_fail_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cv_sign_in"
            android:layout_marginBottom="30dp"
            android:text="@string/sign_in_fail"
            android:textSize="12sp"
            android:textColor="@color/primary_color"
            android:visibility="invisible"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_register"
            android:layout_marginTop="120dp"
            app:cardCornerRadius="10dp"
    >
      <android.widget.Button
              android:id="@+id/btn_sign_in"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/login"
              android:background="@drawable/button_gradient"
              android:textColor="@color/white"
              android:textStyle="bold"
              android:textSize="20sp"
              android:fontFamily="@font/font_regular"
      />
    </androidx.cardview.widget.CardView>

  </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>