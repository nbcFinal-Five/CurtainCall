            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/tv_item1_title"
            app:layout_constraintTop_toBottomOf="@id/tv_item1_title"
            tools:text="올림픽공원 KSPO DOME(체조경기장)" />

        <TextView
            android:id="@+id/tv_item1_period"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:textColor="#A9A9A9"
            app:layout_constraintBottom_toBottomOf="@id/item_1"
            app:layout_constraintStart_toStartOf="@id/tv_item1_title"
