<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:id="@+id/poster_container"
        android:layout_width="120dp"
        android:layout_height="150dp"
        app:cardCornerRadius="3dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/constraint_layout"
            >

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/iv_home_hot_recommend"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher" />
            <View
                android:id="@+id/item_bottom_rank_background_gradient"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_page_indicator_container"
                app:layout_constraintBottom_toBottomOf="@id/iv_home_hot_recommend"
                app:layout_constraintEnd_toEndOf="@id/iv_home_hot_recommend"
                app:layout_constraintStart_toStartOf="@id/iv_home_hot_recommend"
                app:layout_constraintTop_toTopOf="@id/iv_home_hot_recommend"
                app:layout_constraintVertical_bias="1" />

            <TextView
                android:id="@+id/tv_hot_recommend_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_home_hot_recommend"
                app:layout_constraintEnd_toEndOf="@id/iv_home_hot_recommend"
                app:layout_constraintTop_toTopOf="@id/iv_home_hot_recommend"
                app:layout_constraintVertical_bias="1"
                tools:text="~2024.03.31" />

            <TextView
                android:id="@+id/tv_hot_recommend_genre"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_label_container"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="대중음악" />

            <TextView
                android:id="@+id/tv_hot_recommend_showing_state"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/bg_label_container"
                android:gravity="center"
                android:text="공연중"
                android:textColor="@color/white"
                android:textSize="8sp"
                app:layout_constraintStart_toEndOf="@id/tv_hot_recommend_genre"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_hot_recommend_performance_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/poster_container"
        app:layout_constraintStart_toStartOf="@id/poster_container"
        app:layout_constraintTop_toBottomOf="@id/poster_container"
        tools:text="IU H. E. R. WORLD TOUR CONCERT [서울]" />

    <TextView
        android:id="@+id/tv_hot_recommend_place_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#E2E2E2"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/poster_container"
        app:layout_constraintEnd_toEndOf="@id/poster_container"
        app:layout_constraintTop_toBottomOf="@id/tv_hot_recommend_performance_name"
        tools:text="올림픽공원 KSPO DOME(체조경기장)" />
</androidx.constraintlayout.widget.ConstraintLayout>