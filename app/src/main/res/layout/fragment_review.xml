<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
>
  <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="12dp"
  >

    <TextView
            android:id="@+id/tv_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start_point_title"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
    />


    <LinearLayout
            android:id="@+id/ll_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_points"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
    >
      <ImageView
              android:id="@+id/iv_point_1"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/empty_star"
      />
      <ImageView
              android:id="@+id/iv_point_2"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/empty_star"
      />
      <ImageView
              android:id="@+id/iv_point_3"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/empty_star"
      />
      <ImageView
              android:id="@+id/iv_point_4"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/empty_star"
      />
      <ImageView
              android:id="@+id/iv_point_5"
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/empty_star"
      />

    </LinearLayout>

    <TextView
            android:id="@+id/tv_review_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_points"
            android:text="@string/empty_star_warning"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/primary_color"
            android:visibility="invisible"
            android:textSize="12sp"
            android:maxLines="1"
    />

    <TextView
            android:id="@+id/tv_review_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_review"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_review_warning"
            app:layout_constraintStart_toStartOf="parent"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_review"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_review_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cv_submit"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/input_background_color"
            app:cardCornerRadius="10dp"
            android:layout_marginEnd="12dp"
    >
      <EditText
              android:id="@+id/et_review"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:hint="@string/write_in_30"
              android:textColor="@color/white"
              android:textColorHint="@color/input_text_color"
              android:background="@color/input_background_color"
              android:padding="8dp"
      />
    </androidx.cardview.widget.CardView>

    <TextView
            android:id="@+id/tv_comment_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_review"
            android:text="@string/warning_expectation"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:textColor="@color/primary_color"
            android:visibility="invisible"
            android:textSize="12sp"
            android:maxLines="1"
    />

    <androidx.cardview.widget.CardView
            android:id="@+id/cv_submit"
            android:layout_width="80dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/cv_review"
            app:layout_constraintBottom_toBottomOf="@id/cv_review"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="10dp"
    >
      <androidx.appcompat.widget.AppCompatButton
              android:id="@+id/btn_submit"
              android:layout_width="80dp"
              android:layout_height="match_parent"
              android:text="@string/sakusei"
              android:textSize="20sp"
              android:background="@color/half_dark"
              android:gravity="center"
              android:textColor="@color/white"
      />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_comment_warning"
            android:layout_marginTop="24dp"
    />

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rv_reviews"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_rectangle"
            android:text="@string/more_review_text"
            android:textColor="@color/primary_color"
    />

    <TextView
            android:id="@+id/tv_empty_reviews"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:gravity="center"
            android:text="@string/empty_reviews"
            android:textSize="20sp"
            android:textColor="@color/bottom_navi_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment_warning"
            android:lineHeight="30dp"
            android:layout_marginTop="24dp"
    />
  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>