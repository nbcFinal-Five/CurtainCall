<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/background_color"
        android:paddingTop="16dp"
>
  <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
  >
    <TextView
            android:id="@+id/tv_register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/register"
            android:textColor="@color/white"
            android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_register_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"
    >
      <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingHorizontal="16dp"
              android:paddingBottom="44dp"
      >
        <TextView
                android:id="@+id/tv_account_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/account_info"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="40dp"
        />

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_email"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintTop_toBottomOf="@id/tv_account_information"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/input_background_color"
                android:layout_marginTop="12dp"
        >
          <EditText
                  android:id="@+id/et_email"
                  android:layout_width="match_parent"
                  android:layout_height="56dp"
                  android:textSize="16sp"
                  app:layout_constraintTop_toBottomOf="@id/iv_logo"
                  android:background="@color/input_background_color"
                  android:hint="@string/email"
                  android:textColor="@color/text_color"
                  android:textColorHint="@color/text_color"
                  android:paddingHorizontal="12dp"
          />
        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/tv_email_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_email"
                android:text="@string/email_warning"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_color"
                android:visibility="invisible"
                android:textSize="12sp"
        />

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_password"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintTop_toBottomOf="@id/tv_email_warning"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/input_background_color"
                android:layout_marginTop="4dp"
        >
          <EditText
                  android:id="@+id/et_password"
                  android:layout_width="match_parent"
                  android:layout_height="56dp"
                  android:textSize="16sp"
                  app:layout_constraintTop_toBottomOf="@id/iv_logo"
                  android:background="@color/input_background_color"
                  android:hint="@string/password"
                  android:textColor="@color/text_color"
                  android:textColorHint="@color/text_color"
                  android:paddingHorizontal="12dp"
                  android:inputType="textPassword"
          />
        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/tv_password_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_password"
                android:text="@string/password_warning"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_color"
                android:visibility="invisible"
                android:textSize="12sp"
        />

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_password_confirm"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintTop_toBottomOf="@id/tv_password_warning"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/input_background_color"
                android:layout_marginTop="4dp"
        >
          <EditText
                  android:id="@+id/et_password_confirm"
                  android:layout_width="match_parent"
                  android:layout_height="56dp"
                  android:textSize="16sp"
                  app:layout_constraintTop_toBottomOf="@id/iv_logo"
                  android:background="@color/input_background_color"
                  android:hint="@string/password_confirm"
                  android:textColor="@color/text_color"
                  android:textColorHint="@color/text_color"
                  android:paddingHorizontal="12dp"
                  android:inputType="textPassword"
          />
        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/tv_password_confirm_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_password_confirm"
                android:text="@string/password_confirm_warning"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_color"
                android:visibility="invisible"
                android:textSize="12sp"
        />

        <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_password_confirm_warning"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/account_user"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"
        />

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_nickname"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:layout_constraintTop_toBottomOf="@id/tv_nickname"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/input_background_color"
                android:layout_marginTop="12dp"
        >
          <EditText
                  android:id="@+id/et_nickname"
                  android:layout_width="match_parent"
                  android:layout_height="56dp"
                  android:textSize="16sp"
                  app:layout_constraintTop_toBottomOf="@id/iv_logo"
                  android:background="@color/input_background_color"
                  android:hint="@string/account_nickname"
                  android:textColor="@color/text_color"
                  android:textColorHint="@color/text_color"
                  android:paddingHorizontal="12dp"
          />
        </androidx.cardview.widget.CardView>

        <TextView
                android:id="@+id/tv_nickname_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_nickname"
                android:text="@string/name_warning"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/primary_color"
                android:visibility="invisible"
                android:textSize="12sp"
        />

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_gender_male"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_nickname_warning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cv_gender_female"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="2dp"
        >
          <androidx.appcompat.widget.AppCompatButton
                  android:id="@+id/btn_gender_male"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/gender_male"
                  android:textSize="20sp"
                  android:background="@color/component_color"
          />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_gender_female"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_nickname_warning"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_gender_male"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="2dp"
        >
          <androidx.appcompat.widget.AppCompatButton
                  android:id="@+id/btn_gender_female"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/gender_female"
                  android:textSize="20sp"
                  android:background="@color/component_color"
          />
        </androidx.cardview.widget.CardView>

        <LinearLayout
                android:id="@+id/ll_ages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/cv_gender_male"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:flow_horizontalGap="4dp"
        >
          <!-- Button 1 -->
          <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="10dp"
                  android:layout_marginEnd="2dp"
                  app:cardElevation="0dp"
                  android:layout_weight="1"
                  app:cardBackgroundColor="@color/component_color">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_age_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/age_10"
                    android:background="@color/component_color"
            />
          </androidx.cardview.widget.CardView>

          <!-- Button 2 -->
          <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="10dp"
                  android:layout_marginHorizontal="2dp"
                  app:cardElevation="0dp"
                  android:layout_weight="1"
                  app:cardBackgroundColor="@color/component_color">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_age_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/age_20"
                    android:background="@color/component_color"
            />
          </androidx.cardview.widget.CardView>

          <!-- Button 3 -->
          <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="10dp"
                  android:layout_marginHorizontal="2dp"
                  app:cardElevation="0dp"
                  android:layout_weight="1"
                  app:cardBackgroundColor="@color/component_color">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_age_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/age_30"
                    android:background="@color/component_color"
            />
          </androidx.cardview.widget.CardView>

          <!-- Button 4 -->
          <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="10dp"
                  android:layout_marginHorizontal="2dp"
                  app:cardElevation="0dp"
                  android:layout_weight="1"
                  app:cardBackgroundColor="@color/component_color">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_age_40"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/age_40"
                    android:background="@color/component_color"
            />
          </androidx.cardview.widget.CardView>

          <!-- Button 5 -->
          <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="10dp"
                  android:layout_marginHorizontal="2dp"
                  app:cardElevation="0dp"
                  android:layout_weight="1"
                  app:cardBackgroundColor="@color/component_color">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_age_50"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/age_50"
                    android:background="@color/component_color"
            />
          </androidx.cardview.widget.CardView>

          <!-- Button 6 -->
          <androidx.cardview.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:cardCornerRadius="10dp"
                  android:layout_marginStart="2dp"
                  app:cardElevation="0dp"
                  android:layout_weight="1"
                  app:cardBackgroundColor="@color/component_color">

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_age_60"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/age_60"
                    android:background="@color/component_color"
            />
          </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@id/ll_ages"
                app:cardCornerRadius="10dp"
        >
          <androidx.appcompat.widget.AppCompatButton
                  android:id="@+id/btn_register"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/button_gradient"
                  android:text="@string/register"
                  android:textColor="@color/white"
                  android:textSize="20sp"
                  android:textStyle="bold"
          />
        </androidx.cardview.widget.CardView>
      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>