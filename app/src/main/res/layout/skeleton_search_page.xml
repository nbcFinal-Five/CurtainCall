<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ll_2"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                android:layout_marginHorizontal="12dp"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ll_3"
            app:layout_constraintTop_toBottomOf="@+id/ll_1">

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                android:layout_marginHorizontal="12dp"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/ll_4"
            app:layout_constraintTop_toBottomOf="@+id/ll_2">

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                android:layout_marginHorizontal="12dp"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_3">

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                android:layout_marginHorizontal="12dp"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />

            <androidx.cardview.widget.CardView
                style="@style/skeletonSearchStyle"
                app:cardBackgroundColor="@color/component_background_color"
                app:cardCornerRadius="3dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.facebook.shimmer.ShimmerFrameLayout>