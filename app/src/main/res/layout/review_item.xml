<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="12dp"
        android:background="@color/background_color"
>

  <TextView
          android:id="@+id/tv_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          android:textSize="16sp"
          android:textStyle="bold"
          android:text="닉네임"
          android:textColor="@color/white"
  />

  <TextView
          android:id="@+id/tv_created_at"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="@id/tv_name"
          app:layout_constraintBottom_toBottomOf="@id/tv_name"
          app:layout_constraintStart_toEndOf="@id/tv_name"
          android:textSize="12sp"
          android:text="날짜"
          android:textColor="@color/input_text_color"
          android:layout_marginStart="12dp"
  />

  <LinearLayout
          android:id="@+id/ll_points"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/tv_created_at"
          android:orientation="horizontal"
          android:layout_marginTop="12dp"
  >
    <ImageView
            android:id="@+id/iv_point_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star"
    />
    <ImageView
            android:id="@+id/iv_point_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star"
    />
    <ImageView
            android:id="@+id/iv_point_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star"
    />
    <ImageView
            android:id="@+id/iv_point_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star"
    />
    <ImageView
            android:id="@+id/iv_point_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/empty_star"
    />

  </LinearLayout>

  <TextView
          android:id="@+id/tv_comment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/ll_points"
          app:layout_constraintStart_toStartOf="parent"
          android:textSize="16sp"
          android:text="평가"
          android:textColor="@color/white"
          android:layout_marginTop="12dp"
  />

  <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          app:layout_constraintTop_toBottomOf="@id/tv_comment"
          android:layout_marginTop="24dp"
          android:background="@color/component_background_color"
  />

</androidx.constraintlayout.widget.ConstraintLayout>