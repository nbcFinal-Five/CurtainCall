<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_bottom_sheet_background"
    android:clipToOutline="true">

    <TextView
        android:id="@+id/tv_bottomdialog_children_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/filter_children_title"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_bottom_children_possible"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_search_component_background"
        android:gravity="center"
        android:text="@string/filter_children_possible"
        android:textColor="@color/component_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_bottom_children_impossible"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_bottomdialog_children_title"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/tv_bottom_children_impossible"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_search_component_background"
        android:gravity="center"
        android:text="@string/filter_children_impossible"
        android:textColor="@color/component_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_bottom_children_possible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_bottom_children_possible"
        app:layout_constraintTop_toTopOf="@id/tv_bottom_children_possible"
        tools:layout_editor_absoluteY="86dp" />

    <Button
        android:id="@+id/btn_children_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/component_color"
        android:text="@string/filter_choose"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom_children_impossible" />

</androidx.constraintlayout.widget.ConstraintLayout>