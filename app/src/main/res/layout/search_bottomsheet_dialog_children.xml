<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/search_bottom_sheet_background"
    android:clipToOutline="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_bottomdialog_children_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/filter_children_title"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/cpgroup_children_choice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:chipSpacingHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottomdialog_children_title"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_bottom_children_possible"
            style="@style/CustomChipChoice."
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/filter_children_possible"
            app:layout_constraintEnd_toStartOf="@+id/cp_bottom_children_impossible"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_bottomdialog_children_title" />

        <com.google.android.material.chip.Chip
            android:id="@+id/cp_bottom_children_impossible"
            style="@style/CustomChipChoice."
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/filter_children_impossible"
            app:layout_constraintBottom_toBottomOf="@id/cp_bottom_children_possible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cp_bottom_children_possible"
            app:layout_constraintTop_toTopOf="@id/cp_bottom_children_possible" />

    </com.google.android.material.chip.ChipGroup>

    <Button
        android:id="@+id/btn_children_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/component_color"
        android:text="@string/filter_choose"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpgroup_children_choice" />

</androidx.constraintlayout.widget.ConstraintLayout>